
@{
    ViewBag.Title = "Producto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section estilos{
    <link href="~/Content/Plugins/datatables/css/buttons.dataTables.min.css" rel="stylesheet" />
    <style>
        #inner-right {
            max-height: 300px;
            overflow-y: scroll;
        }

        .buttons-excel {
            color: #fff !important;
            background-color: #28a745 !important;
            border-color: #28a745 !important;
        }

        .buttons-print {
            color: #fff !important;
            background-color: #17a2b8 !important;
            border-color: #17a2b8 !important;
        }
    </style>
}


<div class="row">
    <div class="col-sm-12">
        <div class="card border-dark">
            <div class="card-header bg-dark  text-white">
                Reportes de productos por Bodega
            </div>
            <div class="card-body">
                <div class="row align-items-end">
                    <div class="col-sm-2">
                        <div class="form-group mb-0">
                            <label for="cboTienda" class="col-form-label col-form-label-sm">Bodega:</label>
                            <select class="form-control form-control-sm model" id="cboTienda" name="Tienda"></select>
                        </div>
                    </div>
                    <div class="col-sm-2">
                        <div class="form-group mb-0">
                            <label for="txtCodigoProducto" class="col-form-label col-form-label-sm">Codigo Producto:</label>
                            <input type="text" class="form-control form-control-sm model" id="txtCodigoProducto" name="codigoproducto" autocomplete="off">
                        </div>
                    </div>
                    <div class="col-sm-2">
                        @*<div class="form-group mb-0">
                                <button id="btnBuscar" type="button" class="btn btn-sm btn-primary btn-block"><i class="fas fa-search"></i> Buscar</button>
                            </div>*@
                        <div class="form-group">
                            <button id="btnbuscar" type="button" class="btn btn-primary btn-block" onclick="Buscar()">Buscar</button>
                        </div>
                    </div>
                </div>
                <hr />
                <div class="row mb-2">
                    <div class="col-sm-12">
                        <button class="btn btn-info float-left" onclick="printData()">
                            <i class="fas fa-print"></i> Imprimir
                        </button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table table-striped table-bordered table-sm table-responsive-sm" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Nombre Bodega</th>
                                    <th>Codigo Producto</th>
                                    <th>Nombre Producto</th>
                                    <th>Descripcion Producto</th>
                                    <th>Categoria</th>
                                    <th>Marca</th>
                                    <th>Estilo</th>
                                    <th>Talla</th>
                                    <th>Color</th>
                                    <th>EXISTENCIAS</th>
                                    <th>Precio Compra</th>
                                    <th>Precio Venta</th>
                                    <th>Rebaja</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" data-backdrop="static" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header btn-info text-white bg-dark">
                <h5 class="modal-title" id="exampleModalLabel">Realizar Promocion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    <input id="txtid" name="ID" value="0" type="hidden" />
                    <div class="form-group">
                        <label for="txtid" class="col-form-label">Codigo: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model" id="txtid" name="IdProducto">
                    </div>
                    <div class="form-group">
                        <label for="txtPrecioVenta" class="col-form-label">Rebajas: <span class="error"></span></label>
                        <input type="text" class="form-control form-control-sm model" id="txtPrecioVenta" name="PrecioVenta">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-sm btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>

@section scripts{

    <script src="~/Content/Plugins/datatables/js/dataTables.buttons.min.js"></script>
    <script src="~/Content/Plugins/datatables/js/jszip/jszip.min.js"></script>
    <script src="~/Content/Plugins/datatables/js/pdfmake/pdfmake.min.js"></script>
    <script src="~/Content/Plugins/datatables/js/pdfmake/vfs_fonts.js"></script>
    <script src="~/Content/Plugins/datatables/js/buttons.html5.min.js"></script>
    <script src="~/Content/Plugins/datatables/js/buttons.print.min.js"></script>
    <script src="@Url.Content("~/Scripts/Views/Reporte_Prod.js")" type="text/javascript"></script>
}
