
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />


<div class="row">
    <div class="col-sm-12">
        <div class="card border-info">
            <div class="card-header bg-dark text-white">
                Configuracion
            </div>
            <div class="card-body">
                <hr />
                <div class="row mt-3">
                    <div class="col-sm-12">
                        <table id="tbdata" class="table table-striped table-bordered nowrap compact" style="width:100%">
                            <thead>
                                <tr>
                                    <th>Ruc</th>
                                    <th>NombreLocal</th>
                                    <th>NombrePropietaria</th>
                                    <th>Direccion</th>
                                    <th>Telefono</th>
                                    <th>Correo</th>
                                    <th>Linea</th>
                                    <th>NombreFiscal</th>
                                    <th>Descrpcion</th>
                                    <th>Actualizar</th>
                           
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>























<div class="modal fade" id="FormModal" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog " role="document">
        <div class="modal-content">
            <div class="modal-header text-white bg-dark">
                <h5 class="modal-title" id="exampleModalLabel">Configuracion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="form">
                    <input id="txtidConfiguracion" type="hidden" value="0" />
                    <div class="row">
                        <div class="col-md-10">
                            Nombre del local:
                            <input type="text" class="form-control form-control-sm model" id="txtNombreLocal" name="NombreLocal">
                        </div>

                        <div class="col-md-10">
                            Nombre completo del Propietario:
                            <input type="text" class="form-control form-control-sm model" id="txtNombrePropietaria" name="NombrePropietaria">
                        </div>


                        <div class="col-md-10">
                            Direccion:
                            <input type="text" class="form-control form-control-sm model" id="txtDireccion" name="Direccion">
                        </div>

                        <div class="col-md-10">
                            Correo electronico:
                            <input type="text" class="form-control form-control-sm model" id="txtCorreo" name="Correo">
                        </div>

                        <div class="col-md-10">
                            Telefono:
                            <input type="text" class="form-control form-control-sm model" id="txtTelefono" name="Telefono">
                        </div>

                        <div class="col-md-10">
                            Linea fija:
                            <input type="text" class="form-control form-control-sm model" id="txtLinea" name="Linea">
                        </div>


                        <div class="col-md-10">
                            Numero Ruc:
                            <input type="text" class="form-control form-control-sm model" id="txtRUC" name="ruc">
                        </div>

                        <div class="col-md-10">
                            Nombre Fiscal:
                            <input type="text" class="form-control form-control-sm model" id="txtFiscal" name="nombrefiscal">
                        </div>

                        <div class="col-md-10">
                            Descripcion:
                            <input type="text" class="form-control form-control-sm model" id="txtDescripcion" name="descripcion">
                        </div>



                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-danger" data-dismiss="modal">Cerrar</button>
                <button type="button" class="btn btn-sm btn-primary" onclick="Guardar()">Guardar</button>
            </div>
        </div>
    </div>
</div>


@section scripts{
    <script src="@Url.Content("~/Scripts/Views/Configuracion.js")" type="text/javascript"></script>
}